<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/background"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ContactUs">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="false"
        tools:layout_editor_absoluteY="70dp">

        <TextView

            android:id="@+id/contactUsHeading"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:padding="20dp"
            android:text="CONTACT US.."
            android:textColor="@color/white"
            android:textSize="30sp"
            android:textStyle="bold" />


        <Button
            android:id="@+id/btnCall"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/contactUsHeading"
            android:layout_marginTop="20dp"
            android:background="@drawable/roundedbutton"
            android:padding="20dp"
            android:text="Call us"
            android:textColor="#ffffff"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnSms"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btnCall"
            android:layout_marginTop="20dp"

            android:background="@drawable/roundedbutton"
            android:padding="20dp"
            android:text="Message us"
            android:textColor="#ffffff"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btnSms"
            android:layout_marginTop="20dp"
            android:background="@drawable/roundedbutton"
            android:padding="20dp"
            android:text="Mail Us"
            android:textColor="#ffffff"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvAddress"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/btnEmail"
            android:padding="20dp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:gravity="center"
            android:clickable="true"
            android:text="Lambtom College Toronto,275 Yorkland Blvd,North York,Toronto,Ontario,Canada" />
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>